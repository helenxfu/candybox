<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :task_name %>
  </div>

  <div class="field">
    <%= form.label :priority %>
    <div class="flexbox">
      <%= form.radio_button :priority, 0, checked: true %><%= form.label "Low" %>
      <%= form.radio_button :priority, 1 %><%= form.label "Mid" %>
      <%= form.radio_button :priority, 2 %><%= form.label "High" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :completed %>
    <%= form.check_box :completed, id: :task_completed %>
  </div>

  <div class="field">
    <%= form.label :deadline %>
    <%= form.date_select :deadline, default: Date.today, id: :task_deadline %>
  </div>

  <div class="field">
    <%= form.label :category %>
    <%= link_to 'New Category', new_category_path %><br />
    <%= form.collection_select(:category_ids, Category.all, :id, :name, { prompt: "Can be Empty or Multiple"}, {multiple: true, size: 5, class: "custom-select"}) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
