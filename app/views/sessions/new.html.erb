<h1>Login</h1>
<p id="notice"><%= notice %></p>

<%= form_with(scope: :session, url: login_path, local: true) do |form| %>

<div class="field">
  <%= form.label :email %>
  <%= form.email_field :email, id: :user_email, placeholder: "email here" %>
</div>

<div class="field">
  <%= form.label :password %>
  <%= link_to "(forgot password)", new_password_reset_path %>
  <%= form.password_field :password, id: :user_password, placeholder: "password here" %>
</div>

<div class="field">
  <%= form.label :remember_me, class: "checkbox" %>
  <%= form.check_box :remember_me, id: :user_remember_me %>
  <span>Remember me on this computer</span>
</div>

<div class="actions">
  <%= form.submit("Login") %>
</div>

<% end %>